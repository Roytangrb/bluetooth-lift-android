<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toTopOf="@+id/tv_receive_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_receive_text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btn_close"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="CLOSE"
        android:background="@android:color/holo_red_light"
        app:layout_constraintEnd_toEndOf="@+id/tv_receive_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_receive_text" />

    <Button
        android:id="@+id/btn_open"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@android:color/holo_green_light"
        android:text="OPEN"
        app:layout_constraintStart_toStartOf="@+id/tv_receive_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_receive_text" />

</androidx.constraintlayout.widget.ConstraintLayout>